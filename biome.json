{
    "$schema": "./client/node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "lineWidth": 120
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "off"
            }
        }
    },
    "linter": {
        "rules": {
            "recommended": true,
            "correctness": {
                "useExhaustiveDependencies": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noArrayIndexKey": "off"
            }
        }
    }
}